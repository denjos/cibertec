<GridPane fx:id="vbox"
	fx:controller="application.RegistrationFormController"
	xmlns:fx="http://javafx.com/fxml" alignment="top_center" hgap="10"
	vgap="10">
	<padding>
		<Insets top="10" right="10" bottom="10" left="10" />
	</padding>

	<Label fx:id="titulo" text="Suma" GridPane.columnIndex="0" GridPane.rowIndex="0"
		GridPane.columnSpan="2" GridPane.rowSpan="1"
		GridPane.halignment="CENTER">
		<font>
			<Font name="Arial" size="24"></Font>
		</font>
		<GridPane.margin>
			<Insets top="0" right="0" bottom="0" left="0"></Insets>
		</GridPane.margin>
	</Label>
	<Label fx:id="label1" text="Numero 1 : " GridPane.columnIndex="0"
		GridPane.rowIndex="1">
	</Label>
	<Label fx:id="label2" text="Numero 2 : " GridPane.columnIndex="0"
		GridPane.rowIndex="2">
	</Label>

	<TextField fx:id="num1" prefHeight="40"
		GridPane.columnIndex="1" GridPane.rowIndex="1" />
	<TextField fx:id="num2" prefHeight="40"
		GridPane.columnIndex="1" GridPane.rowIndex="2" />

	<VBox GridPane.columnIndex="0" GridPane.rowIndex="3"
		alignment="CENTER" GridPane.columnSpan="2">
		<children>
			<Button fx:id="button" text="Calcular" maxWidth="Infinity"/>
		</children>
	</VBox>
	<stylesheets>
		<URL value="@application.css" />
	</stylesheets>
</GridPane>